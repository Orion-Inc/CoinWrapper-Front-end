{% extends 'template/website.twig' %}

{% block additional_stylesheets %} 
    <link rel="stylesheet" type="text/css" href="{{ base_url() }}/../node_modules/intl-tel-input/build/css/intlTelInput.css">
{% endblock %}
{% block body %}
    <div id="form-section" class="container-fluid signup">
        {% include 'partials/auth/website-logo.twig' %}
        <div class="row">
            {% include 'partials/auth/sidebar.twig' %}
            <div class="form-holder">
                {% include 'partials/auth/main-links.twig' %}
                <div class="signin-signup-form">
                    <div class="form-items">
                        <div class="form-title">Sign Up</div>
                        {% include 'partials/messages/auth-message.twig' %}
                        {% include 'partials/forms/auth/signup-form.twig' %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block additional_scripts %}
    <script src="{{ base_url() }}/../node_modules/intl-tel-input/build/js/intlTelInput.js"></script>
    <script src="{{ base_url() }}/assets/js/dashboard/auth.js"></script>
{% endblock %}