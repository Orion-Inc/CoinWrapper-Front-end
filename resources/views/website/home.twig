{% extends 'template/website.twig' %}
{% block body %}
{% include 'partials/components/preloader.twig' %}

    <div id="header-holder" class="homepage-header">
        <div class="bg-animation"></div>
        {% include 'template/partials/html_blocks/navbar.twig' %}
        <div id="page-head" class="container inner-page">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 text-center">
                        <div class="logo-icon">
                            <img src="assets/img/wallet-2.png" alt="">
                        </div>
                    </div>
                    <div class="col-md-7 col-md-offset-1 pl-0 pr-0">
                        <div class="head-content">
                            <p><span>Swap</span> is a peer-to-peer exchange for crypto currencies.</p>
                            <p class="fs-15">
                                Trade <strong>Bitcoin</strong>, <strong>Ethereum</strong> and <strong>Litecoin</strong> 
                                for fiat currency on an easy, secure and fast platform. We place the trading power in your hands and keep up the trust.
                            </p>
                        </div>
                        <div class="row">
                            {% include 'partials/components/rates-home.twig' %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% include 'template/partials/html_blocks/footer.twig' %}
{% endblock %}

{% block scripts %}
    <script src="{{ base_url() }}/assets/js/website/home.js"></script>
{% endblock %}
