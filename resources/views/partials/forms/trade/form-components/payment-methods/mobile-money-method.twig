<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <div class="form-text">
                <select v-bind:name="'account-type[' + index + ']'" v-model="paymentMethod.service_provider" data-rule-required="true" data-msg-required="Select A Carrier Network">
                    <option value="" disabled v-bind:selected="true">Select Carrier Network</option>
                    <option v-for="option in mobileNetworks" v-bind:value="option.value" v-text="option.text"></option>
                </select>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <p>Carrier Network of Mobile Money Wallet</p>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <div class="form-text">
                <input type="text" placeholder="Enter Account Name" v-bind:name="'account-name[' + index + ']'" v-model="paymentMethod.account_name" data-rule-required="true" data-msg-required="Enter Account Name of Wallet">
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <p>Registered Account Name</p>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <div class="form-text">
                <input id="phone" type="tel" placeholder="Enter Mobile Number" v-bind:name="'account-number[' + index + ']'" v-model="paymentMethod.account_number" data-rule-required="true" data-msg-required="Enter Mobile Number of Wallet">
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <p>Mobile Number of Wallet</p>
    </div>
</div>