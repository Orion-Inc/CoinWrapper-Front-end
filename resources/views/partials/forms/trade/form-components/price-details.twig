<div class="mb-15">
    <h4>GHS to USD Exchange Rate</h4>
    <div class="row">
        <template v-if="changeRate">
            <div class="col-xs-4 col-md-4">
                <div class="form-group">
                    <div class="form-text">
                        <input step="any" type="number" name="exhange-rate" id="exhange-rate" placeholder="" v-model="userExchangeRate" v-bind:required="changeRate">
                    </div>
                </div>
            </div>
            <div class="col-xs-8 col-md-6 col-md-offset-2">
                <p>GHS <strong v-text="userExchangeRate"></strong> / USD <strong>1.00</strong> <a class="btn-change" v-on:click="revertExchangeRate">Default Rate</a></p>
            </div>
        </template>
        <template v-else>
            <div class="col-xs-6">
                <p>GHS <strong v-text="userExchangeRate"></strong> / USD <strong>1</strong></p>
            </div>
            <div class="col-xs-6">
                <p><a class="btn-change" v-on:click="changeExchangeRate">Change</a></p>
            </div>
        </template>
    </div>
</div>
<div id="amount-to-trade">
    <h4>Amount of <strong v-text="selectedCoinSName"></strong> To Trade</h4>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <div class="form-text">
                    <input type="number" name="amount" id="amount" placeholder="" v-on:change="tradeAmount" min="0.000001" required>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-md-offset-2">
            <p>GHS <strong v-text="tradeAmountGHS"></strong> / USD <strong v-text="tradeAmountUSD"></strong></p>
        </div>
    </div>
</div>
<div class="mb-15">
    <h4>Trade Fee</h4>
    <div class="row">
        <div class="col-xs-6">
            <p><strong v-text="tradeFee"></strong> <span v-text="selectedCoinSName"></span></p>
        </div>
        <div class="col-xs-6">
            <p>GHS <strong v-text="tradeFeeGHS"></strong> / USD <strong v-text="tradeFeeUSD"></strong></p>
        </div>
    </div>
</div>