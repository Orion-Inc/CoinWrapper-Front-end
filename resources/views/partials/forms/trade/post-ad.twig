<form class="form" id="post-ad-form">
    <div id="trade-type">
        <h4>Trade Type</h4>
        <div class="form-group">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group form-group-sm">
                        <div class="form-text mb-10">
                            <input type="radio" name="trade-type" id="rad1" value="buy" checked>
                            <label for="rad1">Buy</label>
                        </div>
                        <div class="form-text">
                            <input type="radio" name="trade-type" id="rad2" value="sell">
                            <label for="rad2">Sell</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="coin-details">
        <h4>Select Coin</h4>
        <div class="row">
            <div class="col-md-4">
                <div class="form-text">
                    <select id="coin-name" name="coin-name">
                        <option value="" disabled selected>Select An Option</option>
                        <option value="">Bitcoin</option>
                        <option value="">Ethereum</option>
                        <option value="">Litecoin</option>
                    </select>
                </div>
            </div>
            <div class="col-md-6 col-md-offset-2">
                <div class="row">
                    <div class="col-md-6">
                        <span></span> USD Price
                    </div>
                    <div class="col-md-6">
                        <strong><span></span> GHS / <span></span> USD</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr>
    <div id="exhange-rate" class="mb-15">
        <h4>USD to GHS rate</h4>
        <div class="row">
            <div class="col-md-7">
                <div class="row">
                    <div class="col-md-6"><strong>4.8018 GHS / 1 USD</strong></div>
                    <div class="col-md-6"><a class="btn-change">Change</a></div>
                </div>
            </div>
        </div>
    </div>

    <div id="currency">
        <h4>Currency</h4>
        <div class="row">
            <div class="col-md-4">
                <div class="form-text">
                    <select name="currency">
